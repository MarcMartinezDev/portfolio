---
interface Props {
  title: string;
  desc: string;
  src: string;
}

const { title, desc, src } = Astro.props;
---

<div class="service-card group">
  <div class="flex w-fit overflow-hidden rounded-md">
    <img
      src={src}
      alt={title}
      width={70}
      height={70}
      class="object-contain m-auto"
    />
  </div>
  <div class="flex flex-col gap-1 justify-evenly w-full">
    <h3 class="text-first-text lg:group-hover:text-marker">
      {title}
    </h3>
    <p class="text-second-text lg:group-hover:text-first-text">{desc}</p>
  </div>
</div>

<style>
  .service-card {
    @apply flex flex-col justify-between p-4 gap-2 rounded-md shadow-[#00000035] shadow-[0px_4px_5px] border-t-[2px] border-[#ffffff16] lg:flex-row lg:gap-4 lg:shadow-none lg:rounded-md lg:border-t-[2px] lg:border-transparent lg:hover:shadow-[0px_4px_5px] lg:hover:shadow-[#00000023] lg:hover:border-t-[2px] lg:hover:border-[#ffffff16] lg:hover:bg-[#7679a630] lg:transition-all lg:duration-100;
  }
</style>
