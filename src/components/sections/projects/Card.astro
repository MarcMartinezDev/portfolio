---
interface Props {
  title: string;
  desc: string;
  href: string;
  img: string;
  tech: string[];
}

const { title, desc, href, img, tech } = Astro.props;
---

<a href={href} referrerpolicy="no-referrer" target="_blank" class="group project-card">
  <div
    class="flex w-[120px] h-[100px] overflow-hidden rounded-md lg:w-[150px] lg:h-[100px]"
  >
    <img
      src={img}
      alt={title}
      width={150}
      height={150}
      class="w-full rounded-md object-cover hover:scale-125 transition-all duration-200"
    />
  </div>
  <div class="flex flex-col gap-4 justify-evenly w-full">
    <h3 class="text-first-text group-hover:text-marker">
      {title}
    </h3>
    <p class="text-second-text lg:group-hover:text-first-text">
      {desc}
    </p>
    <div class="flex flex-wrap gap-2">
      {
        tech.map(item => (
          <span class="py-1 px-4 text-marker bg-[#19a1bc23] rounded-2xl text-sm">
            {item}
          </span>
        ))
      }
    </div>
  </div>
</a>

<style>
  .project-card {
    @apply flex flex-col justify-between p-4 gap-4 rounded-md shadow-[#00000035] shadow-[0px_4px_5px] border-t-[2px] border-[#ffffff16] lg:flex-row lg:shadow-none lg:rounded-md lg:cursor-pointer lg:border-t-[2px] lg:border-transparent lg:hover:shadow-[0px_4px_5px] lg:hover:shadow-[#00000023] lg:hover:border-t-[2px] lg:hover:border-[#ffffff16] lg:hover:bg-[#7679a630] lg:transition-all lg:duration-100;
  }
</style>
