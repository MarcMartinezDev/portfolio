<style>
  @font-face {
    font-family: "Montserrat";
    src: url("/assets/Montserrat-Medium.ttf") format("ttf");
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  html {
    @apply bg-primary text-second-text font-["Montserrat","Arial"] scroll-smooth bg-gradient-to-r from-primary via-[#081c42] to-[#0f192c] bg-[length:400%_400%] animate-[gradient_15s_ease_infinite];
  }
  body {
    @apply relative w-full grid grid-cols-1 px-6 gap-20 sm:w-2/3 sm:m-auto sm:px-0 lg:w-4/5 lg:grid-cols-2 lg:gap-10 xl:gap-20 xl:w-2/3 2xl:w-[56%] 2xl:gap-36;
  }
</style>
